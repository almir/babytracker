<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NoBackground" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@null</item>
    </style>
    
    <style name="Theme.ColoredActionBar" parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ColoredActionBar</item>
        <item name="android:actionBarWidgetTheme">@style/LightActionBarWidget</item>
    </style>

    <style name="ColoredActionBar" parent="@android:style/Widget.DeviceDefault.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/turquoise</item>
    </style>
    
    <!-- This helps the PopupMenu stick with Light theme while the ActionBar is in Dark theme -->
    <style name="LightActionBarWidget" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@android:style/Widget.Holo.Light.ListView.DropDown</item>
    </style>
</resources>
