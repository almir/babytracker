<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llBabyTracker"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
        
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:fillViewport="true" >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <ImageView
                android:id="@+id/ivSlikaBeba"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingTop="5dp"
                android:src="@drawable/mjesec01"
                android:contentDescription="@string/devtracking"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
                
            <TextView
                android:id="@+id/txtIntroPodaciBeba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:text="@string/devtracking"
                android:layout_toRightOf="@+id/ivSlikaBeba"
                android:layout_toEndOf="@+id/ivSlikaBeba"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                
            <TextView
                android:id="@+id/txtPodaciBeba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_below="@+id/ivSlikaBeba"
                android:text="@string/dugi_text"
                android:paddingTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>