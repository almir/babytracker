<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPregTracker"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivSlikaPlod"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/pregtracking"
                android:paddingTop="5dp"
                android:src="@drawable/sedmica01" />

            <TextView
                android:id="@+id/txtIntroPodaciPlod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivSlikaPlod"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:text="@string/pregtracking"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/txtPodaciPlod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivSlikaPlod"
                android:paddingTop="5dp"
                android:text="@string/dugi_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textIsSelectable="true" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>